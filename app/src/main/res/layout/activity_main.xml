<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/io_background"
        android:gravity="bottom"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text=""/>

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="50sp"
            android:textColor="@color/green"
            android:text=""/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="7"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="8"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="9"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_tambah"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textColor="#F44B15"
                android:text="+"
                style="@style/Button_Style"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="4"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="5"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="6"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_kurang"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textColor="#F44B15"
                android:text="-"
                style="@style/Button_Style"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="1"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="2"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="3"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_kali"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textColor="#F44B15"
                android:text="ร"
                style="@style/Button_Style"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="0"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_simpan"
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:textColor="@color/green"
                android:textSize="16dp"
                android:text="- SIMPAN DATA -"
                style="@style/Button_Style"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_bagi"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="รท"
                android:textColor="#F44B15"
                style="@style/Button_Style"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_hapus"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="c"
                android:textColor="#F44B15"
                style="@style/Button_Style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_hasil"
                android:layout_width="293dp"
                android:layout_height="70dp"
                android:text="="
                android:layout_marginRight="4dp"
                android:background="@drawable/button"
                style="@style/Button_Style"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C8C5C5C5"
        android:text="Geser untuk melihat lainnya"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listdata"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>